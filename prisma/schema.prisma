generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ProductType {
  FOOD
  CLOTHING
  TOOL
  DAILY
  ELECTRONICE
  OTHER
}

model product {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  price     Float
  inventory BigInt
  type      ProductType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
